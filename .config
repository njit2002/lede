
# ===================== 基础硬件配置（new3/MT7621）=====================
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_newifi-d2=y

# ===================== 系统核心组件 =====================
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_wpad-basic-mbedtls=y  # 无线基础组件

# ===================== LuCI Web界面（中文）=====================
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y

# ===================== WireGuard全套组件 =====================
CONFIG_PACKAGE_kmod-wireguard=y  # WireGuard内核模块
CONFIG_PACKAGE_wireguard-tools=y  # WireGuard命令行工具
CONFIG_PACKAGE_luci-app-wireguard=y  # WireGuard Web管理界面
CONFIG_PACKAGE_luci-i18n-wireguard-zh-cn=y  # WireGuard中文语言包

# ===================== USB基础支持（必选）=====================
CONFIG_PACKAGE_kmod-usb-core=y  # USB核心模块
CONFIG_PACKAGE_kmod-usb2=y      # USB2.0驱动
CONFIG_PACKAGE_kmod-usb3=y      # USB3.0驱动（new3支持）
CONFIG_PACKAGE_usb-modeswitch=y # USB模式切换（解决部分随身WiFi识别问题）
CONFIG_PACKAGE_usbutils=y       # USB设备查看工具（方便排查）

# ===================== USB随身WiFi驱动（覆盖90%主流型号）=====================
# 1. 通用USB网卡驱动
CONFIG_PACKAGE_kmod-usb-net=y                  # USB网络核心
CONFIG_PACKAGE_kmod-usb-net-rtl8152=y          # 适配RTL8152芯片（最常见随身WiFi）
CONFIG_PACKAGE_kmod-usb-net-cdc-ether=y        # 适配RNDIS模式（如华为/小米随身WiFi）
CONFIG_PACKAGE_kmod-usb-net-rndis=y            # RNDIS协议支持

# 2. 4G/5G上网卡驱动（若随身WiFi是插卡式4G/5G设备）
CONFIG_PACKAGE_kmod-usb-serial=y               # USB串口核心
CONFIG_PACKAGE_kmod-usb-serial-option=y        # 适配大部分4G模块（如EC25/EC20）
CONFIG_PACKAGE_kmod-usb-serial-wwan=y          # 4G模块串口支持

# ===================== 4G/5G拨号工具 =====================
CONFIG_PACKAGE_uqmi=y          # 主流4G模块拨号工具
CONFIG_PACKAGE_comgt=y         # 兼容老款4G模块
CONFIG_PACKAGE_ppp=y           # PPP拨号协议
CONFIG_PACKAGE_ppp-mod-pppoe=y # PPPoE拨号支持

# ===================== 常用工具（可选）=====================
CONFIG_PACKAGE_wget=y          # 网络下载工具
CONFIG_PACKAGE_block-mount=y   # 存储挂载工具
CONFIG_PACKAGE_sshfs=y         # 远程文件挂载
